<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox spacing="15" alignment="TOP_CENTER"
      xmlns="http://javafx.com/javafx/8.0.171"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.andy.examapp.ParticipantDetailsController">

    <padding>
        <Insets top="20" left="20" right="20" bottom="20"/>
    </padding>

    <Label text="Participant Details" style="-fx-font-size: 18;"/>

    <TextField fx:id="nameField" promptText="Name"/>
    <TextField fx:id="emailField" promptText="Email" editable="false"/>
    <TextField fx:id="phoneField" promptText="Phone"/>

    <HBox spacing="10">
        <Button text="Edit" onAction="#enableEditing"/>
        <Button text="Save" onAction="#saveChanges"/>
        <Button text="Close" onAction="#closeModal"/>
    </HBox>

</VBox>
