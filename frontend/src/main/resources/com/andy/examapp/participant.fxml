<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/javafx/8.0.171"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.andy.examapp.ParticipantController"
      spacing="20" alignment="TOP_CENTER">

    <padding>
        <Insets top="20" left="20" right="20" bottom="20"/>
    </padding>

    <Label text="Participants" style="-fx-font-size: 20;"/>

    <HBox spacing="10">
        <TextField fx:id="nameField" promptText="Name" />
        <TextField fx:id="emailField" promptText="Email" />
        <TextField fx:id="phoneField" promptText="Phone" />
        <Button text="Add" onAction="#addParticipant"/>
    </HBox>

    <!-- Refresh Button -->
    <Button text="Load Participants" onAction="#loadParticipants"/>

    <!-- Table View -->
    <TableView fx:id="participantsTable" prefWidth="600">

        <columns>
            <TableColumn fx:id="colId" text="ID" prefWidth="50"/>
            <TableColumn fx:id="colName" text="Name" prefWidth="160"/>
            <TableColumn fx:id="colEmail" text="Email" prefWidth="180"/>
            <TableColumn fx:id="colPhone" text="Phone" prefWidth="150"/>
            <TableColumn fx:id="colStatus" text="Status" prefWidth="100"/>
            <TableColumn fx:id="colToggle" text="Action" prefWidth="120"/>
        </columns>

    </TableView>

    <Button text="View Details" onAction="#openDetailsModal"/>

</VBox>
