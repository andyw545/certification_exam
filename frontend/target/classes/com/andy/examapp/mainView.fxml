<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Button?>

<BorderPane fx:controller="com.andy.examapp.MainController"
            xmlns="http://javafx.com/javafx/17.0.2"
            xmlns:fx="http://javafx.com/fxml">

    <!-- Sidebar Navigation -->
    <left>
        <VBox spacing="10" style="-fx-padding:15;">
            <Button text="Participants" onAction="#showParticipants"/>
            <Button text="Courses" onAction="#showCourses"/>
            <Button text="Enrollments" onAction="#showEnrollments"/>
        </VBox>
    </left>

    <!-- This will display your pages -->
    <center>
        <AnchorPane fx:id="contentArea"/>
    </center>

</BorderPane>
